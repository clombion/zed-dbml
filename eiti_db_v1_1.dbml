Table view_validation_summary [headercolor: #6724BB] {
  id integer [pk, increment, note: 'Unique view row ID']
  validation_id integer [not null, note: 'Links to the validation event. Source: metadata_validations.validation_id']
  country_iso3 varchar(3) [not null, note: 'Source: metadata_validations.country_iso3']
  country_name varchar [not null, note: 'Source: joined from metadata_countries']
  validation_year integer [not null, note: 'Source: metadata_validations.year']
  eiti_standard varchar [note: 'Source: metadata_validations.standard']
  board_decision_url varchar [note: 'Source: metadata_validations.board_decision_url']
  
  // --- Requirement & Hierarchy Fields ---
  category varchar [note: 'The highest-level group, e.g., "EITI REQUIREMENT 2...". Source: metadata_validation_scores.req_category']
  module varchar [note: 'The functional module, e.g., "Legal and fiscal framework". Source: metadata_validation_scores.req_module']
  component varchar [note: 'The specific component. Source: metadata_validation_scores.req_component']
  requirement_label varchar [not null, note: 'The unique, clean requirement text. Source: metadata_validation_scores.req_name']
  
  // --- Score & Assessment Fields ---
  score_text varchar [note: 'The text score, e.g., "Fully met", "Partly met". Source: metadata_validation_scores.assessment_value']
  score_numeric integer [note: 'The numeric equivalent of the score. Source: metadata_validation_scores.assessment_number_value']
  is_applicable boolean [note: 'Source: metadata_validation_scores.is_applicable']
  is_required boolean [note: 'Source: metadata_validation_scores.is_required']
  assessor_comment text [note: 'The detailed comment/description from the assessor. Source: metadata_validation_scores.description']

  Note: 'A denormalized view created by joining metadata_validations, metadata_validation_scores, and metadata_countries. The grain is one row per requirement, per validation event.'
}

